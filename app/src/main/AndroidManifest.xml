<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ksl.kevinlee.claremontmenu">

    <android:versionCode>3</android:versionCode>
    <android:versionName>1.2</android:versionName>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.ksl.kevinlee.claremontmenu.MenuApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ksl.kevinlee.claremontmenu.screen.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ksl.kevinlee.claremontmenu.screen.ReviewActivity"
            android:label="Reviews"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ksl.kevinlee.claremontmenu.screen.MainActivity" />
        </activity>
    </application>

</manifest>